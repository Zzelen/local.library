{% extends 'base.html.twig' %}

{% block content %}
    <div class="column middle">
        <table class="table table-dark table-bordered">
            <tr>
                <td>№</td>
                <td>Login name</td>
                <td>Email</td>
                <td>Ф.И.О.</td>
                <td>Role</td>
                <td>Phone</td>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ user.loginName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.fullName }}</td>
                    <td>{{ user.roleName }}</td>
                    <td>{{ user.phone }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}