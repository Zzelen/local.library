{% extends 'base.html.twig' %}

{% block title %} Книги {% endblock %}

{% block body %}
    <div class="body">
        <div class="tableContent">
            <table class="table table-dark table-bordered">
                <tr>
                    <th>№</th>
                    <th>Название</th>
                    <th>Автор</th>
                </tr>
                {% for book in books %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ book.name }}</td>
                        <td>{{ book.author.surname }} {{ book.author.name }} {{ book.author.middlename }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}