{% extends 'base.html.twig' %}

{% block content %}
    <div class="column middle">
        <div class="container">
            {% for symbol, books in booksArray %}
                {% if (loop.index % 3) - 1 == 0 or loop.index == 1 %}
                    {% if loop.first %}
                        <div class="row">
                    {% else %}
                        </div>
                        <div class="row">
                    {% endif %}
                {% endif %}
                <div class="col">
                    <table class="table table-dark table-bordered">
                        <tr>
                            <th>
                                {{ symbol }}
                            </th>
                        </tr>
                        {% for book in books %}
                            <tr>
                                <td>{{ book.name }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                {% if loop.last %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>


{% endblock %}