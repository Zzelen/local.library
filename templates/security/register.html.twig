{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    <div class="body">
        <form id="createUserForm" class="" action="" method="POST">
            <p class="form-group">РЕГИСТРАЦИЯ НОВОГО ПОЛЬЗОВАТЕЛЯ</p>
            <div class="form-group">
                <label>Никнейм: </label>
                <input class="form-control" type="text" name="loginName" required>
            </div>
            <div class="form-group">
                <label>Email address: </label>
                <input class="form-control" type="email" name="email" required>
                <small class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label>Придумайте пароль: </label>
                <input class="form-control" type="password" name="password" required>
            </div>
            <div class="form-group">
                <label>Введите пароль еще раз: </label>
                <input class="form-control" type="password" name="repeatedPassword" required>
            </div>
            <div class="form-group">
                <label>Фамилия: </label>
                <input class="form-control" type="text" name="surname" required>
            </div>
            <div class="form-group">
                <label>Имя: </label>
                <input class="form-control" type="text" name="name" required>
            </div>
            <div class="form-group">
                <label>Отчество: </label>
                <input class="form-control" type="text" name="middlename" required>
            </div>
            <div class="form-group">
                <label>Дата рождения: </label>
                <input class="form-control is-invalid" type="date" name="birthday" required>
                <div class="invalid-feedback">
                    Please provide a valid city.
                </div>
            </div>
            <div class="form-group">
                <label>Номер телефона в формате +7хххххххххх: </label>
                <input class="form-control" type="tel" name="phone" required>
            </div>
            <div class="form-group">
                <input id="saveButton" class="btn btn-primary" type="button" name="saveButton" value="Сохранить">
            </div>
            <div class="form-group">
                <a href="{{ path('app_login') }}">
                    <button type="button" class="btn btn-danger">Отменить</button>
                </a>
            </div>

        </form>
    </div>
{% endblock %}

{% block javascripts %}
    <script class="javascript">

        let $saveUserButton = $("#saveButton")

        let $form = $("#createUserForm");

        $form.find('input').each(function () {
           let a = $(this).attr('name', 'penis');
        });

        $saveUserButton.on('click', function () {
            let $data = $("#createUserForm").serialize();
            $.post('{{ path('app_security_register') }}', $data, function (response) {
                console.log(response);
                if (response.errorMsg) {
                    alert(response.errorMsg.join(', '))
                } else if (response.success === true) {
                    window.location.href = "{{ path('app_login') }}";
                }
            }, 'json');
        });


    </script>
{% endblock %}